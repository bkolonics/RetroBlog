---
import Layout from "./Layout.astro";
import { CollectionEntry } from "astro:content";
const { frontmatter} = Astro.props;

type Props = CollectionEntry<'blog'>['data']

---
<Layout title={frontmatter.title}>
<div class="flex justify-center">
    <h1 class="text-5xl pt-10">{frontmatter.title}</h1>
</div>
<div class="flex justify-center w-1/2">
    <div class="flex flex-col">
        <div class="flex flex-row">
        <p class="text-2xl pt-10">{frontmatter.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
        <p class="text-2xl pt-10 pl-10">{frontmatter.edited ? `Edited : ${new Date(frontmatter.edited).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}` : undefined}</p>
        </div>
        <p>{frontmatter.description}</p>
    </div>
</div>

</Layout>